<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="stats">
        <%= render "shared/stats", user: @user %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form", micropost: @micropost %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t ".feed" %></h3>
      <%= render "shared/feed", feed_items: @feed_items %>
    </div>
  </div>
<% else %>
<% provide :title, t(".title") %>
<div class="center jumbotron">
  <h1><%= t ".t1" %></h1>

  <h2>
    <%= t ".s1" %>
    <a href="http://www.railstutorial.org/"><%= t ".link" %></a>
    <%= t ".s2" %>
  </h2>

  <%= link_to t(".link2"), signup_path, class: "btn btn-lg btn-primary" %>
</div>

<%= link_to image_tag("rails.png", alt: t(".s3")), "http://rubyonrails.org/" %>
<% end %>
